{erl_opts, [debug_info]}.

{deps, [
    {alcove, "0.39.1"}
]}.

{post_hooks, [
    {compile, "bin/procname"},
    {edoc,
        "ex_doc --config .ex_doc.config --source-url \"https://github.com/msantos/prx\" --source-ref \"master\" \"prx\" `erl -noshell -s init stop -eval '{ok, [{_,_,X}]} = file:consult(\"src/prx.app.src\"), io:format(\"~s\", [proplists:get_value(vsn, X, \"0.0.0\")]).'` _build/default/lib/prx/ebin --paths \"_build/default/lib/*/ebin\""}
]}.

{edoc_opts, [
    {doclet, edoc_doclet_chunks},
    {layout, edoc_layout_chunks},
    {dir, "_build/default/lib/prx/doc"}
]}.

{dialyzer, [
    {warnings, [
        unmatched_returns,
        error_handling,
        race_conditions,
        underspecs
    ]}
]}.
